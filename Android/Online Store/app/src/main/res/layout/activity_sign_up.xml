<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/welcome"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/activity_sign_up_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/email"
        android:hint="E-mail"
        android:paddingStart="7dp"
        android:inputType="textEmailAddress"
        android:ems="10"/>

    <EditText
        android:id="@+id/activity_sign_up_edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/username"
        android:hint="Username"
        android:paddingStart="7dp"
        android:layout_marginTop="4dp"
        android:inputType="textPersonName"
        android:ems="10"/>

    <EditText
        android:id="@+id/activity_sign_up_edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/password"
        android:hint="Password"
        android:paddingStart="7dp"
        android:layout_marginTop="4dp"
        android:inputType="textPassword"
        android:ems="10"/>

    <EditText
        android:id="@+id/activity_sign_up_edtConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/password"
        android:hint="Confirm Password"
        android:paddingStart="7dp"
        android:layout_marginTop="4dp"
        android:inputType="textPassword"
        android:ems="10"/>

    <Button
        android:id="@+id/activity_sign_up_btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="9dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/activity_sign_up_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>